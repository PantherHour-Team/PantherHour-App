<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/app_background">

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#60000000"/>

    <TextView
        android:id="@+id/teacher_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:text="Teacher Actions"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:textSize="30sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#60000000"/>

    <Button
        android:id="@+id/manage_activites_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10pt"
        android:background="@drawable/rounded_corners"
        android:textColor="@android:color/white"
        android:text="Manage Activities" />

    <Button
        android:id="@+id/admin_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10pt"
        android:background="@drawable/rounded_corners"
        android:textColor="@android:color/white"
        android:text="Admin Control Panel" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#60000000"/>

    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/panthers_foreground"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="(C) PantherApps.com"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

</LinearLayout>
